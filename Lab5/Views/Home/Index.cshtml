@model Lab5.ViewModels.SiteUserVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.UserName != null && ViewBag.UserLastName != null)
{
    @Html.Raw("<h1>Welcome " + ViewBag.UserName + " " + ViewBag.UserLastName + "</h1>");
}

<h2>Index</h2>

<h4>SamplySiteUserVMDemo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div>
    @Html.ActionLink("Clear the First Name Cookie",     // Text
                     "ClearCookie",                     // Method
                     "Home", new { key = "firstName" })
</div>
<div>
    @Html.ActionLink("Clear the Last Name Cookie",     // Text
                     "ClearCookie",                     // Method
                     "Home", new { key = "lastName" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
